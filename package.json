{
  "name": "@raphaelvserafim/libsignal",
  "version": "4.0.2",
  "description": "Open Whisper Systems' libsignal for Node - TypeScript",
  "repository": {
    "type": "git",
    "url": "https://github.com/raphaelvserafim/libsignal.git"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/cjs/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/cjs/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run fix-esm",
    "build:cjs": "tsc --project tsconfig.cjs.json && cp -r src/whisper dist/cjs/whisper/",
    "build:esm": "tsc --project tsconfig.esm.json && cp -r src/whisper dist/esm/whisper/",
    "fix-esm": "echo '{\"type\":\"module\"}' > dist/esm/package.json",
    "publish": "npm publish --access=public"
  },
  "author": {
    "name": "Raphael Serafim",
    "url": "https://raphaelvserafim.com"
  },
  "license": "GPL-3.0",
  "keywords": [
    "signal",
    "whispersystems",
    "crypto",
    "typescript",
    "encryption",
    "protocol"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "acorn": "^8.11.3",
    "acorn-walk": "^8.3.2",
    "curve25519-js": "^0.0.4",
    "pbjs": "^0.0.14",
    "pbts": "^4.0.7",
    "protobufjs": "^7.5.4",
    "request": "^2.88.2",
    "request-promise-native": "^1.0.9",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "peerDependencies": {
    "typescript": ">=4.9.0"
  },
  "publishConfig": {
    "access": "public"
  }
}